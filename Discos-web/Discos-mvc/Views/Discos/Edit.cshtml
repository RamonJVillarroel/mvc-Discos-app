@model dominio.Disco

@{
    ViewData["Title"] = "Editar Disco";
}

<h1>Pagina de edicion</h1>

<h4>Disco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdDisco" class="control-label"></label>
                <input asp-for="IdDisco" class="form-control" />
                <span asp-validation-for="IdDisco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaDeLanzamiento" class="control-label"></label>
                <input asp-for="fechaDeLanzamiento" class="form-control" />
                <span asp-validation-for="fechaDeLanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDeCanciones" class="control-label"></label>
                <input asp-for="CantidadDeCanciones" class="form-control" />
                <span asp-validation-for="CantidadDeCanciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImagenTapa" class="control-label"></label>
                <input asp-for="UrlImagenTapa" class="form-control" />
                <span asp-validation-for="UrlImagenTapa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Genero</label>
                <select class="form-select" asp-for="Genero.Id" asp-items="ViewBag.Generos"></select>
            </div>

            <div class="form-group">
                <label>Plataforma</label>
                <select class="form-select" asp-for="Plataforma.Id" asp-items="ViewBag.Plataformas"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
