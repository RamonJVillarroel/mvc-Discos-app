@model dominio.Disco

@{
    ViewData["Title"] = "Vista detalle";
}

<h1>Details</h1>

<div>
    <h4>Disco</h4>
    <hr />
    <div class="row">
        <div class="col-9">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdDisco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdDisco)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fechaDeLanzamiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fechaDeLanzamiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CantidadDeCanciones)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CantidadDeCanciones)
                </dd>
                <dt class="col-sm-2">
                    Genero
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genero.Descripcion)
                </dd>

                <dt class="col-sm-2">
                    Plataforma
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Plataforma.Descripcion)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Activo)
                </dd>
            </dl>
        </div>
        <div class="col-3">
            <img src="@Model.UrlImagenTapa" alt="@Model.Nombre" class="img-fluid" />
        </div>
    </div>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdDisco" class="btn btn-outline-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-info">Volver atras</a>
</div>
